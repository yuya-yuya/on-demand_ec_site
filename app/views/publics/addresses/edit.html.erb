<%= form_with model:@address, url: address_path, local:true do |f| %>
    <%= flash[:error] %>
    <table>
        <tr>
            <th><%= f.label :郵便番号（ハイフンなし） %></th>
            <th><%= f.text_field :postal_code, :placeholder => "0000000" %></th>
        </tr>
        <tr>
            <th><%= f.label :住所 %></th>
            <th><%= f.text_field :address, :placeholder => "東京都渋谷区代々木神南町0-0" %></th>
        </tr>
        <tr>
            <th><%= f.label :宛名 %></th>
            <th><%= f.text_field :name, :placeholder => "令和道子" %></th>
        </tr>
    </table>
    <%= f.submit "変更内容を保存", class: "btn btn-success"%>
<% end %>