<div id="public_order_index_wrap">
  <div id="public_order_index_h2_wrap">
    <h2>注文履歴一覧</h2>
  </div>

  <div id="public_order_index_table_wrap">
    <table border="1">
      <thead>
        <tr>
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
        </tr>
      </thead>
      <tbody>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= order.created_at.to_s(:datetime_jp) %></td>
              <td><%= order.address %></td>
              <td>
                <% order.order_details.each do |order_detail| %>
                  <%= order_detail.item.name %><br>
                <% end %>
              </td>
              <td><%= order.total_payment %>円</td>
              <td><%= order.status_i18n %></td>
              <td><%= link_to "表示", order_path(order.id), class: "btn btn-primary public_order_index_table_link" %></td>
            </tr>
          <% end %>
        </tbody>
      </tbody>
    </table>
  </div>
</div>