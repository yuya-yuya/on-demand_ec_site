<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "publics/shared/error_messages", resource: resource %>
  
  <div class="field">
    <%= f.label :姓名 %><br>
    <%= f.text_field :first_name %> <%= f.text_field :last_name %>
  </div>
  
  <div class="field">
    <%= f.label :姓名カナ %><br>
    <%= f.text_field :first_name_kana %> <%= f.text_field :last_name_kana %>
  </div>
  
  </div>
  
  <div class="field">
    <%= f.label :郵便番号 %>
    <%= f.text_field :postcode %>
  </div>
  
  <div class="field">
    <%= f.label :住所 %><br>
    <%= f.text_field :address, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :電話番号 %>
    <%= f.text_field :phone_number, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード確認用 %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "publics/shared/links" %>
