<div id="public_registration_new_wrap">
  <div id="public_registration_new_h2_wrap">
    <h2>新規会員登録</h2>
  </div>

  <div id="public_registration_new_table_wrap">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "publics/shared/error_messages", resource: resource %>
      <table id="public_registration_new_table_wrap">
        <tr>
          <th>名前</th>
          <td>
            <%= f.text_field :first_name %>
            <%= f.text_field :last_name %>
          </td>
        </tr>
        <tr>
          <th>フリガナ </th>
          <td>
            <%= f.text_field :first_name_kana %>
            <%= f.text_field :last_name_kana %>
          </td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        </tr>
        <tr>
          <th>郵便番号(ハイフンなし)</th>
          <td><%= f.text_field :postcode %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= f.text_field :address, autofocus: true, autocomplete: "email", :size=>"60" %></td>
        </tr>
        <tr>
          <th>電話番号(ハイフンなし)</th>
          <td><%= f.text_field :phone_number, autofocus: true, autocomplete: "email" %></td>
        </tr>
        <tr>
          <th>パスワード(6文字以上)</th>
          <td>
            <%= f.password_field :password, autocomplete: "new-password" %>
          </td>
        </tr>
        <tr>
          <th>パスワード(確認用)</th>
          <td>
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </td>
        </tr>
        <tr>
          <th></th>
          <td>
            <%= f.submit "新規登録", class: "btn btn-success" %>
          </td>
        </tr>
      </table>
    <% end %>
  </div>
</div>

<%= render "publics/shared/links" %>
