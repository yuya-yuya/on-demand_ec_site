<h2>会員情報編集</h2>

  <%= form_with model:@customer, url: update_path, local:true do |f| %>
  <%= flash[:error]%>
    
    <table>
      <tr>
        <th><%= f.label :氏名 %></th>
        <td><%= f.text_field :first_name %><%= f.text_field :last_name %></td>
      </tr>
    
    <tr>
      <th><%= f.label :フリガナ  %></th>
      <td><%= f.text_field :first_name_kana %><%= f.text_field :last_name_kana %></td>
    </tr>
    
    <tr>
      <th><%= f.label :郵便番号 %></th>
      <td><%= f.text_field :postcode %></td>
    </tr>
    
    <tr>
      <th><%= f.label :住所 %></th>
      <td><%= f.text_field :address, autofocus: true, autocomplete: "email" %></td>
    </tr>
  
   <tr>
      <th><%= f.label :電話番号 %></th>
      <td><%= f.text_field :phone_number, autofocus: true, autocomplete: "email" %><td>
    </tr>
  
    <tr>
      <th><%= f.label :メールアドレス %></th>
      <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
    </tr>
    
    <tr>
      <th></th>
      <td><%= f.submit "編集内容を保存" %></td>
      <td><%= link_to "退会する", unsubscribed_path, class: "btn btn-danger" %></td>
    </tr>
    </table>
  <% end %>

