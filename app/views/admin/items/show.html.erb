<div id="admin_item_show_wrap">
  <div id="admin_item_show_h2_wrap">
    <h2>商品詳細</h2>
  </div>

  <p class="sucess_noice"><%= flash[:notice] %></p>

  <div id="admin_item_show_main_wrap">
    <div id="admin_item_show_main_left_wrap">
      <%= attachment_image_tag @item, :image, :fill, 220, 150, format: 'jpeg' %>
    </div>
    <div>
      <table>
        <tr>
          <th>商品名</th>
          <td><%= @item.name%></td>
        </tr>
        <tr>
          <th>商品説明</th>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <th>ジャンル</th>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <th>
            税込価格<br>
            (税込価格)
          </th>
          <td><%= ((@item.price) * 1.1).floor %> (<%= @item.price %>) 円</td>
        </tr>
        <tr>
          <th>販売ステータス</th>
          <td>
            <% if @item.is_active == "販売中"%>
                <p id="admin_item_index_table_onsell"><%= @item.is_active %></p>
            <% else %>
                <p id="admin_item_index_table_offsell"><%= @item.is_active %></p>
            <% end %>
          </td>
        </tr>
      </table>
      <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success admin_item_show_submit" %>
    </div>
  </div>
</div>