<div id="admin_customer_show_wrap">
  <div id="admin_customer_show_h2_wrap">
    <h2>
      <%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細
    </h2>
  </div>

  <p class="sucess_noice"><%= flash[:notice] %></p>

  <div id="admin_customer_show_table_wrap">
    <table>
      <tr>
        <th>会員ID</th>
        <td><%= @customer.id %></td>
      </tr>
      <tr>
        <th>氏名</th>
        <td><%= @customer.last_name %><%= @customer.first_name %></td>
      </tr>
      <tr>
        <th>フリガナ</th>
        <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
      </tr>
      <tr>
        <th>郵便番号</th>
        <td><%= @customer.postcode %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <th>電話番号</th>
        <td><%= @customer.phone_number %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= @customer.email %></td>
      </tr>
      <tr>
        <th>会員ステータス</th>
        <td>
          <% if @customer.is_subscribed == "有効" %>
              <p id="admin_customer_show_issubscribed"><%= @customer.is_subscribed %></p>
          <% else %>
              <p><%= @customer.is_subscribed %></p>
          <% end %>
        </td>
      </tr>
      <tr>
        <th></th>
        <td>
          <%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "btn btn-success admin_customer_show_table_edit_button" %>
          <%= link_to "注文履歴一覧を見る", admin_orders_path(id: @customer.id, order_sort: 0), class: "btn btn-primary" %>
        </td>
      </tr>
    </table>
  </div>
</div>