<div id="admin_customer_index_wrap">
    <div id="admin_customer_index_h2_wrap">
        <h2>会員一覧</h2>
    </div>
    <table>
        <thead>
            <tr>
                <th class="table-secondary">会員ID</th>
                <th class="table-secondary">氏名</th>
                <th class="table-secondary">メールアドレス</th>
                <th class="table-secondary">ステータス</th>
            </tr>
        </thead>
        <tbody>
            <% @customers.each do |customer| %>
                <tr>
                    <td>
                        <%= customer.id %>
                    </td>
                    <td>
                        <%= link_to admin_customer_path(customer.id) do%>
                            <%= customer.last_name %><%= customer.first_name %>
                        <% end %>
                    </td>
                    <td>
                        <%= customer.email %>
                    </td>
                    <td>
                        <%= customer.is_subscribed %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>