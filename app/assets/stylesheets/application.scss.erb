 @import "bootstrap";
 
 .application_header_div{
    display: flex;
    justify-content: space-between;
    padding: 30px;
    width: 80%;
    margin: 0 auto;
 }
 
 header{
    width: 100%;
 }
 
 #header-list{
    display: flex;
    justify-content: flex-end;
    width: 90%;
    margin-right: 0;
    width: 700px;
 }

 #header-list li{
   list-style: none;
   margin-left: 20px;
 }

 #header_search div{
    margin-left: 50%;
 }

 #admin_header-search{
    text-align: right;
 }
 
 #public_top_wrap{
    width: 100%;
 }

 #public_top_inside_wrap{
   width: 80%;
   margin: 0 auto;
   display: flex;
 }

 #public_top_genre{
   width: 20%;
   padding: 20px;
 }

 #public_top_genre h4{
   border: 1px solid black;
   font-size: 15px;
   text-align: center;
   margin-bottom: 0px;
   border-bottom: none;
 }

 #public_top_genre div{
   border: 1px solid black;
 }

 #public_top_genre div p{
   padding: 5px 10px;
   margin-bottom: 0;
 }

 #public_top_genre div br{
   display: block;
   content: "";
   margin: 0;
 }

 #public_top_main{
    width: 80%;
    padding: 20px;
 }

 #public_top_main_intro{
    width: 80%;
 }

 #public_top_main_intro{
  background-size: cover;
  background-image: url("<%= asset_path('cake2.jpg') %>");
  text-align: center;
  height: 400px;
 }

 #public_top_main_item h4{
    margin: 20px 0;
 }

 #public_top_main_item_outer{
    display: flex;
 }

 #public_top_main_item_outer div{
   width: 25%;
 }

 #public_top_main_item_all{
   text-align: right;
 }

 #public_homes_about_h1{
   text-align: center;
   font-size: 60px;
   margin: 30px auto;
 }

 #public_homes_about_p{
   text-align: center;
   font-size: 20px;
 }

 #public_homes_about_image{
    text-align: center;
 }

 #public_registration_new_wrap{
   width: 100%;
 }

 #public_registration_new_h2_wrap{
   width: 70%;
   margin: 30px auto 20px;
 }

 #public_registration_new_h2_wrap h2{
   display: inline;
   padding: 0 20px;
   border-radius: 5px;
   font-size: 20px;
   background-color: lightgray;
 }

 #public_registration_new_table_wrap{
   width: 80%;
   margin: 0 auto;
 }

